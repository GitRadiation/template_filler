# Configuración del Proyecto - Template Filler
# Copiar este archivo a .env y ajustar los valores

# ============================================================================
# Django
# ============================================================================
DJANGO_SETTINGS_MODULE=project.settings
DEBUG=True
SECRET_KEY=django-insecure-development-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,web
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=djangodb
DATABASE_USER=djangouser
DATABASE_PASSWORD=secretpassword
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_URL=postgres://djangouser:secretpassword@localhost:5432/djangodb

# ============================================================================
# Cache (Redis)
# ============================================================================
CACHE_BACKEND=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2

# ============================================================================
# Celery
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_LOGLEVEL=info
CELERY_TASK_MAX_RETRIES=3
CELERY_TASK_DEFAULT_RETRY_DELAY=60

# ============================================================================
# Admin Django
# ============================================================================
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com

# ============================================================================
# Logging
# ============================================================================
DJANGO_LOG_LEVEL=INFO
LOG_FORMAT=verbose

# ============================================================================
# Email (Opcional)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contraseña-app

